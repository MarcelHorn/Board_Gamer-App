<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_create_group">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textHeaderNewDate"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="@string/text_title_Create_Group" />

        <Spinner
            android:id="@+id/spinnerWeekdays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/spinner_background"
            android:popupBackground="@color/common_google_signin_btn_text_dark_default" />

        <Spinner
            android:id="@+id/spinnerInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/spinner_background" />

        <Button
            android:id="@+id/btnTime"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:onClick="onClickTimeSelect"
            android:text="@string/btn_time"
            android:background="@drawable/custom_button"
            />

        <TextView
            android:id="@+id/textFirstEvening"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:textAlignment="center"
            android:textColor="#641313"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickRefreshGroup"
            android:background="@drawable/custom_button"
            android:text="@string/btn_group_create" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>