<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.boardgamer_app">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity_past_evening_details"
                  android:label="Vergangener Termin"></activity>
        <activity android:name=".Activity_past_evenings"
                  android:label="Vergangene Termine"/>
        <activity android:name=".Activity_evening_details"
                  android:label="Termin"/>
        <activity
            android:name=".Activity_login"
            android:label="OnBoard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_evenings"
            android:label="Anstehende Termine" />
        <activity
            android:name=".Activity_settings_user"
            android:label="Benutzereinstellungen" />
        <activity
            android:name=".Activity_settings_evenings"
            android:label="Termineinstellungen" />
        <activity
            android:name=".Activity_settings"
            android:label="Einstellungen" />
        <activity android:name=".Activity_messages"
            android:label="Nachrichten"/>
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity
            android:name=".Activity_register"
            android:label="Registrieren" />
    </application>

</manifest>